<div class="admin-blog">
  <h2>Blog Entry</h2>
  <ul>
    <li>
      {{input type="text" value=model.title class="blog-title" placeholder="Title" autofocus="autofocus"}}
    </li>
    <li>
      {{input type="date" value=model.date class="blog-date" placeholder="Date" autofocus="autofocus"}}
    </li>
    <li>
      {{textarea rows="4" cols="70" value=model.body class="blog-body" placeholder="Blog Post" autofocus="autofocus"}}
    </li>
    <li>
      <button disabled= {{isDisabled}} {{action 'savePost' model}} class="allbuttons">Post</button>
    </li>
  </ul>
  {{#if responseMessage}}
    <div class="alert-success">{{responseMessage}}</div>
  {{/if}}
</div>

<h1>List</h1>
<div class="row">
  {{#each model as |blog-post|}}
    <div class="post-container">
        <div class="title-container">
          <h3 class="blog-title">{{blog-post.title}}</h3>
        </div>
        <div class="panel-body">
          <p>{{blog-post.body}}</p>
          <p>{{blog-post.date}}</p>
        </div>
        <div class="post-footer">
          <button class="allbuttons" {{action 'deletePost' blog-post}}>Delete</button>
        </div>
      </div>
  {{/each}}
</div>

{{#link-to 'petpalsadmin.indexedit' tagName="li"}}<a href="">Edit Blogs</a>{{/link-to}}
